<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_8dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtPatientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_4dp"
                android:hint="Patient Name "
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:padding="@dimen/dimen_4dp"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                app:met_baseColor="@color/blue"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/blue" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtPatientNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_4dp"
                android:hint="Mobile Number"
                android:inputType="number"
                android:maxLength="10"
                android:padding="@dimen/dimen_4dp"
                app:met_baseColor="@color/blue"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/blue" />


            <RadioGroup
                android:id="@+id/rgGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_4dp"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_4dp">

                <RadioButton
                    android:id="@+id/rdMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:drawableLeft="@drawable/ic_male"
                    android:drawablePadding="@dimen/dimen_8dp"
                    android:padding="@dimen/dimen_4dp"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/rdFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_female"
                    android:drawablePadding="@dimen/dimen_8dp"
                    android:padding="@dimen/dimen_4dp"
                    android:text="Female" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dimen_8dp"
                    android:layout_weight="1"
                    android:textColor="@color/blue"
                    android:gravity="center"
                    android:hint="Date"
                    android:padding="@dimen/dimen_4dp" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edtAge"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="age"
                    android:inputType="number"
                    android:maxLength="3"
                    android:padding="@dimen/dimen_4dp"
                    app:met_baseColor="@color/blue"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@color/blue" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtSelectLab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_16dp"
                android:drawableRight="@drawable/ic_arrow_drop_down"
                android:paddingLeft="@dimen/dimen_4dp"
                android:paddingRight="@dimen/dimen_4dp"
                android:text="Select Lab"
                android:textSize="@dimen/M_TEXT" />

            <TextView
                android:id="@+id/txtSelectTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_16dp"
                android:drawableRight="@drawable/ic_arrow_drop_down"
                android:paddingLeft="@dimen/dimen_4dp"
                android:paddingRight="@dimen/dimen_4dp"
                android:text="Select Test"
                android:textSize="@dimen/M_TEXT" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_8dp"
                android:layout_margin="@dimen/dimen_8dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnHomeCollected"
                    android:layout_weight="1"
                    style="@style/MyFlatButtonStyle"
                    android:background="@android:color/transparent"
                    android:text="@string/home_collected" />

                <Button
                    android:id="@+id/btnCenterCollected"
                    android:layout_weight="1"
                    style="@style/MyFlatButtonStyle"
                    android:background="@android:color/transparent"
                    android:text="@string/center_collected" />
            </LinearLayout>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtRefer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_8dp"
                android:gravity="top|start"
                android:hint="Reference Note"
                android:inputType="textMultiLine|textCapWords"
                android:minLines="2"
                android:padding="@dimen/dimen_8dp"
                app:met_baseColor="@color/blue"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/blue" />

            <Button
                android:layout_weight="1"
                android:id="@+id/btnRefernce"
                style="@style/MyFlatButtonStyle"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:text="@string/reference" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>