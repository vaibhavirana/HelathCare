<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llLab"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_8dp"
    android:background="@drawable/bg_round_rect"
    android:orientation="vertical"
    android:padding="@dimen/dimen_8dp">

    <TextView
        android:id="@+id/txtLabName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lab Name: " />

    <TextView
        android:id="@+id/txtDrName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Doctor Name: " />

    <TextView
        android:id="@+id/txtMobileNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile Num: " />

    <TextView
        android:id="@+id/txtLandLineNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Landline Num: " />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email: " />

    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clinic Address: " />

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Timming: " />

    <TextView
        android:id="@+id/txtSelectTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16dp"
        android:drawableRight="@drawable/ic_arrow_drop_down"
        android:paddingLeft="@dimen/dimen_4dp"
        android:paddingRight="@dimen/dimen_4dp"
        android:text="Select Test"
        android:textSize="@dimen/M_TEXT" />

    <TextView
        android:id="@+id/txtSelectTestPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test : " />

