<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_8dp"
    android:elevation="@dimen/dimen_8dp">

    <LinearLayout
        android:id="@+id/llLab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/edittext_hint_color"
            android:orientation="vertical"
            android:padding="@dimen/dimen_8dp">

            <TextView
                android:id="@+id/txtLabName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/L_TEXT"
                android:text="Lab Name: " />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/M_TEXT"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:layout_margin="@dimen/dimen_4dp"
                android:text="Email: " />
        </LinearLayout>


        <TextView
            android:id="@+id/txtDrName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/M_TEXT"
            android:layout_margin="@dimen/dimen_4dp"
            android:text="Doctor Name: " />

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/M_TEXT"
            android:layout_margin="@dimen/dimen_4dp"
            android:text="Clinic Address: " />

        <TextView
            android:id="@+id/txtMobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/M_TEXT"
            android:layout_margin="@dimen/dimen_4dp"
            android:text="Mobile Num: " />

        <TextView
            android:id="@+id/txtLandLineNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/M_TEXT"
            android:layout_margin="@dimen/dimen_4dp"
            android:text="Landline Num: " />




        <TextView
            android:id="@+id/txtFees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Timming: "
            android:textSize="@dimen/M_TEXT"
            android:layout_margin="@dimen/dimen_4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtSelectTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_16dp"
            android:padding="@dimen/dimen_8dp"
            android:drawableRight="@drawable/ic_arrow_drop_down"
            android:drawableTint="@color/colorWhite"
            android:paddingLeft="@dimen/dimen_4dp"
            android:paddingRight="@dimen/dimen_4dp"
            android:text="Select Test"
            android:background="@color/colorAccent"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/M_TEXT" />

        <TextView
            android:id="@+id/txtSelectTestPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/M_TEXT"
            android:layout_margin="@dimen/dimen_4dp"
            android:text="Test : " />

        <TextView
            android:id="@+id/txtNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/M_TEXT"
            android:layout_margin="@dimen/dimen_4dp"
            android:text="Note: " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_margin="@dimen/dimen_4dp"
        android:padding="@dimen/dimen_4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTime"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="@dimen/M_TEXT"
            android:layout_height="wrap_content"
            android:text="Timming: " />

        <TextView
            android:id="@+id/txtPatient"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="@dimen/M_TEXT"
            android:layout_height="wrap_content"
            android:text="No of Patient: " />


        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>